nomb1 = int(input("Veuillez saisir le 1er nombre entier: "))
nomb2 = int(input("Veuillez saisir le 2ème nombre entier: "))
operateur = input("Veuillez entrer l'opérateur: ")
reponse = float(input("Veuillez saisir la réponse: "))

if operateur == "*":
    produit = nomb1 * nomb2
    for _ in range(4):
        if produit == reponse:
            print("Bravo!")
            break
        else:
            reponse = float(input("Donnez une autre réponse: "))

elif operateur == "-":
    moins = nomb1 - nomb2
    for _ in range(4):
        if moins == reponse:
            print("Bravo!")
            break
        else:
            reponse = float(input("Donnez une autre réponse: "))

elif operateur == "+":
    somme = nomb1 + nomb2
    for _ in range(4):
        if somme == reponse:
            print("Bravo!")
            break
        else:
            reponse = float(input("Donnez une autre réponse: "))

elif operateur == "/":
    div = nomb1 / nomb2
    for _ in range(4):
        if div == reponse:
            print("Bravo!")
            break
        else:
            reponse = float(input("Donnez une autre réponse: "))





