import math
from operator import truediv


pi = math.pi


def ligneCar(n, ch):
   for i in range(n):
       print(ch, end="")




def surfCercle(R):
   s = math.sqrt(R * pi)
   print(s)



def longeurEntier(unNbre):
   nbChiffres = 1
   base = 10
   while((unNbre/base)>=1):
       nbChiffres = nbChiffres + 1
       base = base * 10
   return nbChiffres




def bissextile(anee):
   if (anee % 4) == 0:
       biss = True
   else:
       biss = False


