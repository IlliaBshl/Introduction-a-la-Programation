def heureSec(h, m, s):
   sec = (h * 3600) + (m * 60) + s
   return sec


def secondeHer(s):
   h = s // 3600
   s = s % 3600
   m = s // 60
   s = s % 60
   return  h,m,s




choix = int(input("Voullez vous le choix 1(h:m:s en sec) un ou choix 2(sec en h:m:s)"))
if choix == 1:
   h = int(input("combien d'heures"))
   m = int(input("combien minutes"))
   s = int(input("combien secodnes"))
   print(heureSec(h,m,s))
if choix == 2:
   s = int(input("combien secodnes"))
   print(secondeHer(s))



